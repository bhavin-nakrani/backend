{% set current_path = app.request.get('_route') %}
<!-- Sidebar Menu -->
<aside class="main-sidebar sidebar-light-purple elevation-4">
    <!-- Brand Logo -->
    <a href="{{ path('dashboard') }}" class="brand-link">
        <img src="{{ asset('build/images/logo.png') }}"
             alt="site Logo"
             class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">{{ setting.appName }}</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="https://via.placeholder.com/160x160" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">{{ (app.user.name)? app.user.name : app.user.email }}</a>
            </div>
        </div>
        <nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->
        <li class="nav-item">
            <a href="{{ path('dashboard') }}" class="nav-link {{ (current_path == 'dashboard')? 'active':'' }}">
                <i class="nav-icon fas fa-tachometer-alt"></i>
                <p>{{ 'Dashboard'|trans }}</p>
            </a>
        </li>
        <li class="nav-item">
            <a href="{{ path('category_index') }}" class="nav-link {{ (current_path == 'category_index')? 'active':'' }}">
                <i class="nav-icon fa fa-object-group"></i>
                <p>
                    {{ 'Category'|trans }}
                </p>
            </a>
        </li>
        <li class="nav-item">
            <a href="{{ path('article_index') }}" class="nav-link {{ (current_path == 'article_index')? 'active':'' }}">
                <i class="nav-icon fa fa-newspaper"></i>
                <p>{{ 'Article'|trans }}</p>
            </a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item has-treeview">
                <a href="{{ path('user_index') }}" class="nav-link {{ (current_path == 'user_index')? 'active':'' }}">
                    <i class="nav-icon fas fa-user"></i>
                    <p>{{ 'User'|trans }}</p>
                </a>
            </li>
            <li class="nav-item has-treeview">
                <a href="{{ path('role_index') }}" class="nav-link {{ (current_path == 'role_index')? 'active':'' }}">
                    <i class="nav-icon far fa-registered"></i>
                    <p>{{ 'Role'|trans }}</p>
                </a>
            </li>

            <li class="nav-item">
                <a href="{{ path('setting_index') }}" class="nav-link {{ (current_path == 'setting_index')? 'active':'' }}">
                    <i class="fa fa-cogs nav-icon"></i>
                    <p>{{ 'Administration'|trans }}</p>
                </a>
            </li>

            <li class="nav-item">
                <a href="{{ path('jms_translation_index') }}" target="_blank" class="nav-link {{ (current_path == 'jms_translation_index')? 'active':'' }}">
                    <i class="fa fa-language nav-icon"></i>
                    <p>{{ 'Translation'|trans }}</p>
                </a>
            </li>
        {% endif %}

        <li class="nav-item">
            <a href="{{ path('app_logout') }}" class="nav-link">
                <i class="nav-icon fas fa-sign-out-alt"></i>
                <p>
                    {{ 'Logout'|trans }}
                </p>
            </a>
        </li>

    </ul>
</nav>
<!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>