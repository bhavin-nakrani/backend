{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header bg-light">
                        <h4 class="text-bold">{{ 'User Detail'|trans }}</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>{{ 'Name'|trans }}</label>
                                    <p class="text-muted">{{ user.name }}</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>{{ 'Email'|trans }}</label>
                                    <p class="text-muted">{{ user.email }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>{{ 'Role'|trans }}</label>
                                    <p class="text-muted">{{ user.roles[0] }}</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>{{ 'Phone'|trans }}</label>
                                    <p class="text-muted">{{ user.phone }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                {% if user.photo is not null %}
                                    <div class="form-group">
                                        <label>{{ "Current Image"|trans }}</label>
                                        <div>
                                            <img src="{{ asset(USER_IMAGE_DIR~'/'~user.photo) }}" title="Image" alt="{{ user.photo }}" class="profile-photo-detail" />
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <a href="{{ path('user_index') }}" class="btn btn-outline-secondary mr-2">{{ 'Back'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
