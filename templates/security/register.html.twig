{% extends 'userbase.html.twig' %}

{% block title %}{{ 'Register'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row box-center">
            <div class="col-12 d-flex justify-content-center">
                <div class="card w-50">
                    <div class="card-body register-card-body">
                        <div class="register-logo">
                            <a href="#"><b>{{ setting.appName }}</b></a>
                        </div>
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}

                        <p class="login-box-msg">{{ 'Register a new membership'|trans }}</p>

                        {{ form_start(registrationForm) }}

                        {{ form_errors(registrationForm) }}
                        <div class="input-group mb-3">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        {{ form_errors(registrationForm.email) }}
                        <div class="input-group mb-3">
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        {{ form_errors(registrationForm.plainPassword) }}
                        <div class="row">
                            <div class="col-8">
                                <div class="">
                                    {{ form_widget(registrationForm.agreeTerms) }}
                                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">
                                        I agree to the <a href="#">terms</a>
                                    </label>
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>
                            </div>
                            <div class="col-4">
                                <button type="submit" class="btn btn-purple btn-block">{{ 'Register'|trans }}</button>
                            </div>
                        </div>
                        {{ form_end(registrationForm) }}

                        <a href="{{ path('app_login') }}" class="text-center">{{ 'I already have a membership'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}